<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme.Foursquare" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/onPrimary</item>
        <item name="colorPrimaryVariant">@color/primaryVariant</item>
        <item name="colorOnPrimary">@color/onPrimary</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/secondary</item>
        <item name="colorOnSecondary">@color/onSecondary</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/onPrimary</item>
        <item name="android:navigationBarColor">@color/onPrimary</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.Foursquare.Splash" parent="Theme.Foursquare">
        <item name="android:windowSplashScreenBackground">@color/onPrimary</item>
        <item name="android:windowSplashScreenAnimatedIcon">@drawable/logo_animated</item>
        <item name="android:windowSplashScreenBrandingImage">@drawable/branding_drawable</item>
        <item name="android:windowSplashScreenAnimationDuration">1000</item>
        <item name="postSplashScreenTheme">@style/Theme.Foursquare</item>
        <item name="android:statusBarColor">@color/onPrimary</item>
        <item name="android:navigationBarColor">@color/onPrimary</item>
        <item name="android:windowLightStatusBar">false</item>
    </style>
</resources>